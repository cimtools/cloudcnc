<project>
	<property name="sdk.dir" location="/Users/parambir.singh/Development/eclipse-gae/plugins/com.google.appengine.eclipse.sdkbundle_1.8.4/appengine-java-sdk-1.8.4" />

  	<import file="${sdk.dir}/config/user/ant-macros.xml" />
	

	<path id="project.classpath">
		<fileset dir="${sdk.dir}/lib">
			<include name="shared/**/*.jar" />
		</fileset>
	</path>

	<target name="clean" description="Cleans the war folder">
		<delete includeEmptyDirs="true">
    			<fileset dir="war" includes="**/*"/>
  		</delete>
	</target>

	<target name="copyjars" description="Copies the App Engine JARs to the WAR.">
		<mkdir dir="war/WEB-INF/lib" />
		<copy todir="war/WEB-INF/lib" flatten="true">
			<fileset dir="${sdk.dir}/lib/user">
				<include name="**/*.jar" />
			</fileset>
		</copy>
	</target>

	<target name="compile" depends="copyjars" description="Moves files to the WAR.">
		<mkdir dir="war" />
		<copy todir="war">
			<fileset dir="../src/main/webapp"/>
		</copy>
	</target>

	<target name="runserver" depends="compile" description="Starts the development server">
		<dev_appserver war="war"/>
	</target>

	<target name="update" depends="compile" description="Uploads the application to the App Engine.">
		<appcfg action="update" war="war" />
	</target>
</project>
